<% include ../partials/header %>

<div class="container">
	<h1 class="text-center">Edit Comment</h1>
	<div style="width: 40%; margin: 25px auto;">
<!-- 	Form that makes a PUT request to update comment (PUT requests cannot be made on their own, requires "?_method=PUT" appended to the end of the POST route)	 -->
		<form action = "/resources/<%= resource_slug %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<textarea class="form-control" type = "text" name="comment[text]" rows="4"><%= comment.text %></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
			</div>
		</form>
		<a href="/resources">Go Back</a>
	</div>
<% include ../partials/footer %>
</div>