<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">	
			<h1>Welcome to YelpCamp!</h1>
			<p>	View our hand-picked campgrounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
			</p>
		</div>
	</header>
	<div class="d-flex justify-content-center" style="margin-bottom: 16px">
		<p>
			<form action="/campgrounds" method="GET" class="form-inline">
				<div class="form-group">
					<input type="text" name="search" placeholder="Campground search..." class="form-control mr-2">
					<input type="submit" value="Search" class="btn btn-primary">
				</div>
			</form>
		</p>
	</div>
	<div class="row text-center">
			<% campgrounds.forEach(function(campground){ %>
					<div class="col-md-3 mb-4">
						<div class="card crop">
							<img src="<%= campground.image %>" class="card-img-top front-page-card">
							<div class="card-body">
								<h5 class="card-title"><%= campground.name %></h5>
								<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
							</div>
						</div>
					</div>
			<% }) %>
	</div>
	<% include ../partials/footer %>
</div>
